<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Spinner
            android:id="@+id/creating_mode_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </Spinner>
    <EditText
        android:id="@+id/file_name_input_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/file_create_placeholder_name_dialog"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/file_extension_input_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/file_create_placeholder_extension_dialog"
        android:layout_marginTop="16dp"/>
    <Spinner
            android:id="@+id/file_extension"
            android:layout_width="match_parent"
             android:layout_height="wrap_content"/>

</LinearLayout>